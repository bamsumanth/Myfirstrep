import json
import boto3
client = boto3.client('sns')

def lambda_handler(event, context):
    topic_arn = 'arn:aws:sns:us-east-2:355330023528:sns_s3'
    message = 'doc uploaded'
    client.publish(TopicArn=topic_arn,Message=message)
       



import json
import boto3
client = boto3.client('ses')
def lambda_handler(event, context):
    source_arn = 'arn:aws:ses:us-east-2:355330023528:identity/p.sumanth23@gmail.com'
    source = 'p.sumanth23@gmail.com'
    destination = {'ToAddresses':['p.sumanth23@gmail.com']}
    message = {'Subject':{'Data':'object'},'Body':{'Text':{'Data':'mail sent'}}}
    client.send_email(Source=source,Destination=destination,Message=message,SourceArn=source_arn)
	
	
